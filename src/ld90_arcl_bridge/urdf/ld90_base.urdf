<?xml version="1.0"?>
<robot name="ld90_base">

  <!-- Define material to remove "undefined material" warning -->
  <material name="grey">
    <color rgba="0.6 0.6 0.6 1.0"/>
  </material>

  <!-- Simple base link for visualization -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.8 0.6 0.25"/>
      </geometry>
      <origin xyz="0 0 0.125" rpy="0 0 0"/>
      <material name="grey"/>
    </visual>

    <collision>
      <geometry>
        <box size="0.8 0.6 0.25"/>
      </geometry>
      <origin xyz="0 0 0.125" rpy="0 0 0"/>
    </collision>

    <inertial>
      <mass value="50"/>
      <origin xyz="0 0 0.125" rpy="0 0 0"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
  </link>

</robot>
